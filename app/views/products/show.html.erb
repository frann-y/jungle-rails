<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
            <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
            <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
            <dd><%= @product.price %></dd>
          <dt>Soldout</dt>
            <% if @product.quantity == 0 %>
              <dd style="color: crimson">Currently Not In Stock</dd>
              <% else %>
              <dd style="color:RoyalBlue">Available For Order</dd>
            <% end %>
          <dt>Average Rating</dt>
          <% if !@product.average_rating %>
            <dd>Not Yet Rated</dd>
          <% else %>
            <dd><%= @product.average_rating.round(1) %>/5</dd>
          <% end %>
        </dl>
      </div>
    </div>

<!-- review form -->
<%= render "reviews" %>

  </article>
</section>